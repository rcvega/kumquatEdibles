<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/game_background_2"
    android:paddingBottom="@dimen/activity_vertical_margin_gamePlay"
    android:paddingLeft="@dimen/activity_horizontal_margin_gamePlay"
    android:paddingRight="@dimen/activity_horizontal_margin_gamePlay"
    android:paddingTop="@dimen/activity_vertical_margin_gamePlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2,3"
    android:orientation="horizontal" >
    
    <TableRow 
        android:layout_weight="1">
        
        <Button
            style="@style/ButtonTextView"
            android:id="@+id/topLeft"
            android:onClick="handleSequence"
            android:text="@string/sequence"/>

        <Button
            android:id="@+id/topRight"
            style="@style/ButtonTextView"
            android:onClick="handleSequence"
            android:text="@string/sequence" />
        
        </TableRow>
        
    <TableRow 
        android:layout_weight="1">
        
        <Button
            style="@style/ButtonTextView"
            android:id="@+id/middle"
            android:onClick="handleSequence"
            android:text="@string/sequence"/>
        
        </TableRow>
        
    <TableRow 
        android:layout_weight="1">
        
        <Button
            style="@style/ButtonTextView"
            android:id="@+id/bottomLeft"
            android:onClick="handleSequence"
            android:text="@string/sequence"/>
        
        <Button
            style="@style/ButtonTextView"
            android:id="@+id/bottomRight"
            android:onClick="handleSequence"
            android:text="@string/sequence"/>
        
        </TableRow>

</TableLayout>